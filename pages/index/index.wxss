/* pages/main/index.wxss */
.container-box{background-color: #efeff4;height: 100vh}
.img-box{padding: 32rpx;background-color: #fff;border-bottom: 1rpx solid #e5e5e5;position: relative}
.img-box image{width: 686rpx;height: 686rpx;background-color: #f9f9f9}
.input-row{
    margin: 30rpx auto;
    border-bottom: 1rpx solid #e5e5e5;
    border-top: 1rpx solid #e5e5e5;
    display: flex;
    align-items: center;
    height: 88rpx;
    padding: 0 32rpx; 
    background-color: #fff;
    font-size: 34rpx;
    color: #000
}

.input-row input{margin-left: 30rpx;flex: 1}
.mybtn{width:686rpx;margin: 60rpx auto;background: #28af62;color: #fff; }
.mask{position: fixed;top: 0;left: 0;z-index: 3; width: 100%;height: 100%;opacity: 0;}
.canvas-box{position: fixed;top:999999rpx;left: 0}
.rq_jiema{
    background: #28af62;
    color: #fff;
}
.value_qr{
    margin: auto;
    width: 686rpx;
    word-wrap: break-word; 
    word-break: normal;
    height: 686rpx;
    overflow: hidden;
    position: relative;
}
.value_qr_cipy{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    position: absolute;
    bottom: 20rpx;
    text-align: right;
    font-size: 28rpx;
    color: #999999;
}
.qr_box{
  margin: auto;
  width: 30%;
  height: 65rpx;
  line-height: 65rpx;
  background: #28af62;
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
}
.qr_box:active,.mybtn:active{
  background: #198c4a;
}
